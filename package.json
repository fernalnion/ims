{
  "name": "ims",
  "version": "1.0.1",
  "description": "Inventory Management System API",
  "main": "index.js",
  "scripts": {
    "serve": "nodemon index.js",
    "start": "node index.js",
    "eslint": "eslint . --ext .js --fix",
    "commit:precheck": "npm run eslint",
    "cover": "nyc npm test && nyc check-coverage",
    "cover:check": "nyc check-coverage",
    "bump": "bump"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fernalnion/ims.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/fernalnion/ims/issues"
  },
  "homepage": "https://github.com/fernalnion/ims#readme",
  "devDependencies": {
    "bump": "^0.2.5",
    "chai": "^4.3.4",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "mocha": "^9.1.1",
    "nodemon": "^2.0.12",
    "nyc": "^15.1.0"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^2.24.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "ip": "^1.1.5",
    "joi": "^17.4.2",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.7",
    "swagger-jsdoc": "5.0.1",
    "swagger-ui-express": "^4.1.6",
    "uuid": "^8.3.2",
    "winston": "^3.3.3",
    "winston-mongodb": "^5.0.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run commit:precheck",
      "pre-push": ""
    }
  },
  "nyc": {
    "check-coverage": true,
    "excludeNodeModules": true,
    "branches": 75,
    "lines": 75,
    "functions": 75,
    "statements": 75,
    "exclude": [
      "coverage/**",
      "packages/*/test{,s}/**",
      "**/*.d.ts",
      "test{,s}/**",
      "**/__tests__/**",
      "**/{ava,babel,nyc}.config.{js,cjs,mjs}",
      "**/jest.config.{js,cjs,mjs,ts}",
      "**/{karma,rollup,webpack}.config.js",
      "**/.{eslint,mocha}rc.{js,cjs}",
      "**/*.enum.js"
    ]
  }
}
